ifeq ($(USE_GCC_DEPS),1)
ifeq ($(DEPS_DONE),)
DEPS_DONE = 1


# /***********************************************************************
# // gcc automated dependencies
# ************************************************************************/

EXTRA_CFLAGS   += -Wp,-MMD,.deps/$(*F).pp
EXTRA_CXXFLAGS += -Wp,-MMD,.deps/$(*F).pp

ifeq ($(strip $(wildcard .deps)),)
  DEPS_MAGIC := $(shell mkdir .deps > /dev/null 2>&1 || :)
else
  DEP_FILES := $(wildcard .deps/*.pp)
  ifneq ($(strip $(DEP_FILES)),)
    include $(DEP_FILES)
  endif
endif


endif
endif
